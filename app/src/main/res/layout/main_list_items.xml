<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_card_edge_margin"
    android:elevation="8dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:orientation="vertical">

            <ImageView
                android:contentDescription="@null"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_width"
                android:layout_marginTop="@dimen/image_margin"
                android:layout_marginLeft="@dimen/image_margin"
                android:layout_marginRight="@dimen/image_margin"
                android:src="@drawable/treat" />


            <ImageView
                android:contentDescription="@null"

                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_width"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/image_margin"
                android:src="@drawable/ic_clock" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/treatment_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/material_card_title_block_large_subtitle_margin_top"
                android:paddingEnd="@dimen/material_card_title_block_padding_horizontal"
                android:paddingTop="@dimen/material_card_title_block_small_padding_vertical"
                android:textSize="@dimen/title_font_size_main_list"
                tools:text="Treatment Title" />


            <TextView
                android:id="@+id/treatment_date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_main_list"
                tools:text="Time" />

            <TextView
                android:id="@+id/treatment_repeat_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:paddingBottom="@dimen/material_card_title_block_small_padding_vertical"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_main_list"
                tools:text="Repeat Type" />


        </LinearLayout>


        <ImageView
            android:contentDescription="@string/alarm_working"
            android:id="@+id/treatment_iamge_working"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_notifications_off_grey600_24dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>
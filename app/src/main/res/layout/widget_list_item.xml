<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idslayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_color_white"
    android:contentDescription="@string/yourTreament"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:orientation="vertical">

            <ImageView
                android:contentDescription="@null"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_width"
                android:layout_marginTop="@dimen/image_margin"
                android:layout_marginLeft="@dimen/image_margin"
                android:layout_marginRight="@dimen/image_margin"
                android:src="@drawable/treat" />


            <ImageView
                android:contentDescription="@null"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_width"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/image_margin"
                android:src="@drawable/ic_clock" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:padding="15dp"
                android:id="@+id/treatment_name_text_wid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/title_font_size_main_list"
                tools:text="Treatment Title" />


            <TextView
                android:id="@+id/treatment_date_text_wid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_main_list"
                tools:text="Time" />

            <TextView
                android:id="@+id/treatment_repeat_text_wid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:paddingBottom="@dimen/material_card_title_block_small_padding_vertical"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_main_list"
                tools:text="Repeat Type" />


        </LinearLayout>


        <ImageView
            android:contentDescription="@string/alarm_working"
            android:id="@+id/treatment_iamge_working_wid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_notifications_off_grey600_24dp" />

    </LinearLayout>

</LinearLayout>